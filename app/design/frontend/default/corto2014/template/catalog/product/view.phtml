	    endif;

	    if ($_prod->getId() == $_product->getId()):
		$find = 1;
	    else:
		$_prev = $_prod->getProductUrl();
	    endif; 
	endforeach;

	if ($find == 0):
	    $_next = '';
	    $_prev = '';
	endif;

