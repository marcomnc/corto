<?xml version="1.0" encoding="UTF-8"?>
<config>
    <tabs>
        <autelsettings>
            <label>Autel Advanced Settings</label>
            <sort_order>999</sort_order>
        </autelsettings>         
    </tabs>      
    <sections>
        <autelconnector>
            <label>Autel Connector</label>
