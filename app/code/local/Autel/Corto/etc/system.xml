<?xml version="1.0" encoding="UTF-8"?>
<config>
    <tabs>
        <autelsettings>
            <label>Autel Advanced Settings</label>
            <sort_order>999</sort_order>
        </autelsettings>         
    </tabs>      
    <sections>
        <autelcorto>
            <label>Autel/Corto Moltedo Custom</label>
            <tab>autelsettings</tab>
            <sort_order>500</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>0</show_in_store>
            <groups>
                <autelpage>
                    <label>Corto Moltedo - Header</label>
                    <sort_order>0</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields> 
                        <header-block-id>
                            <label>Blocco Menù home page</label>
                            <frontend_type>select</frontend_type>
                            <source_model>autelcorto/adminhtml_system_config_source_cms_block</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </header-block-id>                  
                        <footer-block-top-id>
                            <label>Blocco Top del footer</label>
                            <frontend_type>select</frontend_type>
                            <source_model>autelcorto/adminhtml_system_config_source_cms_block</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>
                                <model>
                                    autelcorto/adminhtml_system_config_source_comment
                                </model>
                                <imgname>
                                    template/adminhtml/footer_structure_t_1.png
                                </imgname>
                                <text>
                                    Questo blocco appare solo in home page
                                </text>
                            </comment>
                        </footer-block-top-id>
                        <footer-block-left-id>
                            <label>Blocco Left del footer</label>
                            <frontend_type>select</frontend_type>
                            <source_model>autelcorto/adminhtml_system_config_source_cms_block</source_model>
                            <sort_order>12</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>
                                <model>
                                    autelcorto/adminhtml_system_config_source_comment
                                </model>
                                <imgname>
                                    template/adminhtml/footer_structure_l_1.png
                                </imgname>                                
                            </comment>
                        </footer-block-left-id>
                        <footer-block-right-id>
                            <label>Blocco Right del footer</label>
                            <frontend_type>select</frontend_type>
                            <source_model>autelcorto/adminhtml_system_config_source_cms_block</source_model>
                            <sort_order>14</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>
                                <model>
                                    autelcorto/adminhtml_system_config_source_comment
                                </model>
                                <imgname>
                                    template/adminhtml/footer_structure_r_1.png
                                </imgname>                                
                            </comment>
                        </footer-block-right-id>
                        <cms_shop_page>
                            <label>Pagina statica E-Shop</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_cms_page</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </cms_shop_page>
                    </fields>
                </autelpage>
                <autelcatalog translate="label">
                    <label>Corto Moltedo - Catalog</label>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>                   
                        <custom_image translate="label">
                            <label>Custom Image</label>
                            <frontend_model>autelcorto/adminhtml_catalog_media_customimage</frontend_model>
                            <backend_model>adminhtml/system_config_backend_serialized_array</backend_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </custom_image>
                        <total_background_image>
                            <label>Number of backgroungd image</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Numero totale di immagini di sfondo disponibili. Le immagini si devono 
                            trovare nella cartella /media/layout/sfondi/catalog e chiamarsi img_(numero progressivo).jpg</comment>
                        </total_background_image>
                        <outfit_folder translate="label">
                            <label>Outfit Image Folder</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Inserire il percorso fisco dove recperare le immagini per l'outfit della home page</comment>
                        </outfit_folder>
                        <outfit_sub_folder translate="label">
                            <label>Outfit Image sub Folder</label>
                            <frontend_model>autelcorto/adminhtml_catalog_media_outfitfolder</frontend_model>
                            <backend_model>adminhtml/system_config_backend_serialized_array</backend_model>
                            <sort_order>15</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Inserire il percorso fisco dove recperare le immagini per l'outfit della home page</comment>
                        </outfit_sub_folder>
                        <home_header_image>
                            <label>Home page Header Image</label>
                            <frontend_type>image</frontend_type>
                            <backend_model>adminhtml/system_config_backend_image</backend_model>
                            <upload_dir config="system/filesystem/media" scope_info="1">corto/home/header</upload_dir>
                            <base_url type="media" scope_info="1">corto/home/header</base_url>
                            <sort_order>35</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Immagine da visualizzare nella home page. L'immagine deve avere dimensione 1280 x 720 ed avere un bordo in basso di almeno 80px</comment>
                        </home_header_image>
                        <custom_currency_format>
                            <label>Custom currency format</label>
                            <frontend_model>autelcorto/adminhtml_directory_currency_format</frontend_model>
                            <backend_model>adminhtml/system_config_backend_serialized_array</backend_model>
                            <sort_order>45</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Formattazione custom della valuta che va a sovrascrivere le formattazioni standard. ¤ = simbolo # = zero non significativo 0 = zero sgnificativo. Vedi "Format tokens for self generated number formats" su "http://framework.zend.com/manual/1.12/en/zend.locale.parsing.html#zend.locale.number.localize.table-1"</comment>
                        </custom_currency_format>
                    </fields>                    
                </autelcatalog>
            </groups> 
            <groups>
                <emailavailability>
                    <label>Corto Moltedo - Email for booking product</label>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>                    
                    <fields>
                        <warehouse_email_template translate="label">
                            <label>Email Template for booking product</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_template</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                        </warehouse_email_template>                        
                    </fields>
                </emailavailability>
            </groups>  
            <groups>
                <store_zone>
                    <label>Corto Moltedo - Parametri gestione zone</label>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>          
                    <infodb_key>
                        <label>InfodDB Key</label>
                        <frontend_type>text</frontend_type>                        
                        <sort_order>10</sort_order>
                        <show_in_default>1</show_in_default>
                    </infodb_key>          
                </store_zone>
            </groups>                  
        </autelcorto>
    </sections>
</config>