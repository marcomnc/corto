<?xml version="1.0" encoding="UTF-8"?>
<config>
    <tabs>  
        <autelsettings>
            <label>Autel Advanced Settings</label>
            <sort_order>999</sort_order>
        </autelsettings>         
    </tabs> 
    <sections>
        <autelsocial translate="label">
            <label>Social Plugin</label>
            <tab>autelsettings</tab>
            <frontend_type>text</frontend_type>
            <sort_order>600</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>0</show_in_store>
            <groups>
                <settings translate="label">
                    <label>Generale</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enable Social Plugin</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <refernecedWeb translate="label">
                            <label>Referenced Web Site</label>
                            <frontend_type>text</frontend_type>                            
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </refernecedWeb>
                        <follow-page translate="label">
                            <label>Follow us Page</label>
                            <frontend_type>text</frontend_type>                            
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Se vuota si viene reindirizzati alla home page</comment>
                        </follow-page>
                    </fields>
                </settings>
            </groups>
            <groups>
                <facebook translate="label">
                    <label>Facebook</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>5</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>                        
                        <fb_appId translate="label">
                            <label>Facebook App Id</label>
                            <frontend_type>text</frontend_type>                            
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </fb_appId>
                        <fb_secretKey translate="label">
                            <label>Facebook Secret Key</label>
                            <frontend_type>text</frontend_type>                            
                            <sort_order>15</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </fb_secretKey>        
                        <fb_page>
                            <label>Facebook Page</label>
                            <frontend_type>text</frontend_type>                            
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </fb_page>
                        <fb_customer_group translate="label">
                            <label>Facebook Default Customer Group</label>
                            <frontend_type>Select</frontend_type>
                            <source_model>adminhtml/system_config_source_customer_group</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Group to be assigned when the customer is created</comment>
                        </fb_customer_group>
                    </fields>
                </facebook>
            </groups>
            <groups>
                <twitter translate="label">
                    <label>Twitter</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>                        
                        <tw_page>
                            <label>Twitter Page</label>
                            <frontend_type>text</frontend_type>                            
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </tw_page>
                    </fields>
                </twitter>
            </groups>
            <groups>
                <pinterest translate="label">
                    <label>Pinterest</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>15</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>                        
                        <pin_page>
                            <label>Pinterest Page</label>
                            <frontend_type>text</frontend_type>                            
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </pin_page>
                    </fields>
                </pinterest>
                <weibo translate="label">
                    <label>Weibo</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>15</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>                        
                        <pin_page>
                            <label>Weibo Page</label>
                            <frontend_type>text</frontend_type>                            
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </pin_page>
                    </fields>
                </weibo>
            </groups>
        </autelsocial>
        <web>
            <groups>
                <unsecure>
                    <fields>
                        <wp_url>
                            <label>Wordpress Url</label>
                            <frontend_type>text</frontend_type>                            
                            <sort_order>999</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website><show_in_store>1</show_in_store>
                        </wp_url>
			<enable_news translate="label">
                            <label>Enable News in Home Page</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1000</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                        </enable_news>
                    </fields>
                </unsecure>
            </groups>
        </web>
    </sections>
</config>